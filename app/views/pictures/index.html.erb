<p id="notice"><%= notice %></p>

<h1>Album</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <p>ログインファミリー</p>

  <% unless @family.album.nil? %>
    <%= @family.album.id %>
    <%= @family.album.family_id %>
    <% unless @family.album.nil? %>
      <p>写真一覧</p>
      <tbody>
        <% @family.album.pictures.each do |picture| %>
        <tr>
          <td><%= picture.date %></td>
          <td><%= image_tag picture.image.url %></td>
          <td><%= link_to 'Show', family_picture_path(:id => picture, :family_id => @family) %></td>
          <td><%= link_to 'Edit', edit_family_picture_path(:id => picture, :family_id => @family) %></td>
          <td><%= link_to 'Destroy', family_picture_path(:id => picture, :family_id => @family), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    <% end %>
  <% end %>
</table>

<p>全ファミリー</p>
<% @families.each do |family| %>
  <% unless family.album.nil? %>
    <%= family.album.id %>
    <%= family.album.family_id %>
    <br>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.date %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= link_to 'Show', family_picture_path(@family, picture) %></td>
        <td><%= link_to 'Edit', edit_family_picture_path(@family, picture) %></td>
        <td><%= link_to 'Destroy', family_picture_path(@family, picture), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'リダイレクト', family_pictures_path(:family_id => @family) %>
<br>
<%= link_to 'New Picture', new_family_picture_path(:family_id => @family) %>
<br>
<%= link_to 'Back FamilyPage', family_path(:id => @family) %>
