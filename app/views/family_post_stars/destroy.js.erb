$('.familyPostStar').prop("disabled", true);
var speed = 1000;
var unfamilyPostStar = function() {
  var familyPostStarCount = $('#familyPostStarCount-<%= @family_post.id %>');
  $('#familyPostStar-<%= @family_post.id %>').replaceWith("<%= escape_javascript(render('family_post_stars/family_post_star', { family_post: @family_post })) %>");
  familyPostStarCount.html(parseInt(familyPostStarCount.text())-1);
}
setTimeout(unfamilyPostStar, speed);

$('.familyPostStar').removeAttr('disabled');