<% if user_signed_in? %>
    <% if current_user.has_family? %>
      <div style="height: 40px; background: #666666; position: relative;">
        <div style="position: absolute; right: 0; height: 20px; width: 20px; background: #89c145;">
          +
        </div>
      </div>
      <div id="familyPostModal">
        <%= render('shared/family_post_form') %>
      </div>
    <% end %>

    <!--<nav>-->
